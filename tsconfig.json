{
  "compilerOptions": {
    // language features
    "esModuleInterop": true,
    "moduleResolution": "node",

    // compile
    "target": "es2017",
    "module": "commonjs",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // type checking
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
